<script>
function isLoggedIn(){return !!localStorage.getItem('auth_user');}

/* Nav links */
document.querySelectorAll('.nav-link').forEach(a=>{
  a.addEventListener('click',e=>{
    e.preventDefault();
    const id=a.getAttribute('href').slice(1);
    if(a.dataset.protect && !isLoggedIn()){openModal('login',id);return;}
    document.getElementById(id).scrollIntoView({behavior:'smooth'});
    setActiveLink(a);
  });
});
function setActiveLink(active){
  document.querySelectorAll('.nav-link').forEach(l=>l.classList.toggle('active',l===active));
}

/* Hero button */
document.getElementById('seeProjectsBtn').addEventListener('click',()=>{
  document.querySelector('.nav-link[href="#projects"]').click();
});

/* Fade-in observer */
const obs=new IntersectionObserver(entries=>{
  entries.forEach(en=>{
    if(en.isIntersecting)en.target.classList.add('visible');
  });
},{threshold:0.25});
document.querySelectorAll('.fade-in').forEach(el=>obs.observe(el));

/* Scroll active nav */
window.addEventListener('scroll',()=>{
  let current='';
  document.querySelectorAll('section').forEach(sec=>{
    const top=sec.getBoundingClientRect().top;
    if(top<=120 && top>-window.innerHeight/2)current=sec.id;
  });
  document.querySelectorAll('.nav-link').forEach(link=>link.classList.toggle('active',link.getAttribute('href')==='#'+current));
});

/* Modal logic */
const modal=document.getElementById('modal');
const modalBody=document.getElementById('modalBody');
document.getElementById('openLogin').addEventListener('click',()=>openModal('login'));
document.getElementById('openSignup').addEventListener('click',()=>openModal('signup'));
modal.addEventListener('click',e=>{if(e.target===modal)closeModal();});

function openModal(type,returnTo){
  modal.classList.add('show');
  modal.setAttribute('aria-hidden','false');
  renderModal(type,returnTo);
}
function closeModal(){
  modal.classList.remove('show');
  modal.setAttribute('aria-hidden','true');
}
function renderModal(type,returnTo){
  if(type==='login'){
    modalBody.innerHTML=`
      <h3 style="color:#9fe8ff">Login</h3>
      <input id="u_name" placeholder="username">
      <input id="u_pass" type="password" placeholder="password">
      <div style="display:flex;gap:8px;margin-top:8px">
        <button class="btn-primary" id="doLogin">Login</button>
        <button class="btn-ghost" id="closeBtn">Cancel</button>
      </div>
      <p style="margin-top:10px;font-size:0.9rem">No account? <a href="#" id="toSignup">Sign up</a></p>`;
    document.getElementById('closeBtn').onclick=closeModal;
    document.getElementById('toSignup').onclick=e=>{e.preventDefault();renderModal('signup',returnTo);}
    document.getElementById('doLogin').onclick=()=>doLogin(returnTo);
  } else {
    modalBody.innerHTML=`
      <h3 style="color:#9fe8ff">Sign up</h3>
      <input id="s_name" placeholder="username">
      <input id="s_pass" type="password" placeholder="password">
      <div style="display:flex;gap:8px;margin-top:8px">
        <button class="btn-primary" id="doSignup">Create</button>
        <button class="btn-ghost" id="closeBtn2">Cancel</button>
      </div>
      <p style="margin-top:10px;font-size:0.9rem">Have an account? <a href="#" id="toLogin">Login</a></p>`;
    document.getElementById('closeBtn2').onclick=closeModal;
    document.getElementById('toLogin').onclick=e=>{e.preventDefault();renderModal('login',returnTo);}
    document.getElementById('doSignup').onclick=doSignup;
  }
}
function doLogin(returnTo){
  const u=document.getElementById('u_name').value;
  const p=document.getElementById('u_pass').value;
  const demoUsers=JSON.parse(localStorage.getItem('demo_users')||'{}');
  if((u==='Pratheek' && p==='chatgpt5')||(demoUsers[u]&&atob(demoUsers[u])===p)){
    localStorage.setItem('auth_user',u);
    afterLogin(returnTo);
  } else alert('Invalid credentials.');
}
function doSignup(){
  const u=document.getElementById('s_name').value;
  const p=document.getElementById('s_pass').value;
  if(!u||!p){alert('Enter username and password');return;}
  const users=JSON.parse(localStorage.getItem('demo_users')||'{}');
  if(users[u]){alert('User exists');return;}
  users[u]=btoa(p);
  localStorage.setItem('demo_users',JSON.stringify(users));
  alert('Account created. Please login.');
  renderModal('login');
}
function afterLogin(returnTo){
  closeModal();
  document.getElementById('servicesContent').innerHTML=`<ul class="list"><li>Embedded Systems & PCB Design</li><li>Social Media Management</li><li>Technical Content Writing</li><li>Data Analytics</li><li>Frontend Web Design</li><li>Electrical Wiring Design</li></ul>`;
  document.getElementById('blogsContent').innerHTML=`<p>Read more on <a href="https://medium.com/@pratheekpatil5" target="_blank">Medium</a></p>`;
  if(returnTo)document.getElementById(returnTo).scrollIntoView({behavior:'smooth'});
}
if(isLoggedIn())afterLogin();
</script>
</body>
